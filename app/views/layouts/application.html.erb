<!DOCTYPE html>
<html>
  <head>
    <title>Booking Application</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application"%>
    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", "application" %>
  </head>
  <body>
    <!-- Navbar -->
	  <header>
	    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container"><!-- Collapsable nav bar -->
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <!-- Your site name for the upper left corner of the site -->
            <%= link_to "Booking", root_url, :class => "brand" %>
             <ul class="nav">
                <li class="active"><%= link_to "bookings", bookings_path %></li>
             </ul>

            <!-- Start of the nav bar content -->
            <div class="nav-collapse"><!-- Other nav bar content -->
              <ul class="nav pull-right">
                  <li>sara</li>
                  <li class="divider-vertical"></li>
                  <li>Logout</li>
                  <li>Sign In | Sign Up</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
	  </header>
	  <!-- FIN navbar -->
	  
   	<!-- Conteneur central -->
    <div class="container" id="global">
      <%= render :partial => "shared/flash", :locals => {:flash => flash} %><br /><br />
      <%= yield %>
    </div>
    <!-- FIN conteneur central -->

    <%= javascript_include_tag "application" %>
  </body>
</html>
