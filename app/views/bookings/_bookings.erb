<%- model_class = Teleporter -%>

<table class="table table-striped table-sorting">
  <thead>
    <tr>
      <th scope="col">
        ID</button>
      </th>
      <th scope="col">
        Passenger</button>
      </th>
      <th scope="col">
        Teleporter</button>
      </th>
      <th scope="col">
        Created on</button>
      </th>
      <th scope="col"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <% path = "/bookings/#{booking.id}" %>
        <td><%= link_to booking.id, booking_path(booking) %></td>
        <td><%= booking.passenger.first_name %></td>
        <td><%= booking.teleporter.departure.name %></td>
        <td><%= booking.teleporter.name %></td>
        <td><%=l booking.created_at %></td>
        <td>
          <a href="#" class='btn btn-mini btn-danger' onclick="remove_resource('bookings', <%= booking.id %>);">
            <i class="icon-remove-sign"> </i>
            <%= t('.destroy', :default => t("helpers.links.destroy")) %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination-right" id="pagination">
  <%= render :partial => '/shared/pagination_booking', :resources => @bookings %>
</div>