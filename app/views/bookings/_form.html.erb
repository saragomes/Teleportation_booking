<!-- Form booking -->
<%#= form_tag("/find", method: "get") do %>

<% form_tag({controller: "teleporters", action: "search"}, method: "get", class: "nifty_form") %>

  <div class="modal-body">
    <% if @teleporter.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@teleporter.errors.count, "error") %> prohibited this teleporter from being saved:</h2>
        <ul>
        <% @teleporter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= collection_select :departure, Departure.all, :id, :name, {prompt: "De"}, {:class => "multiselect"} %>
    </div>

    <div class="field">
      <%= collection_select :destination, Destination.all, :id, :name, {prompt: "A"}, {:class => "multiselect"} %>
    </div>

    <div class="field">
       <%= text_field :book, :date, {:placeholder => "Date", 'data-behaviour' =>'datepicker'} %>
    </div>

    <div class="input-daterange" data-behaviour='datepicker' id="datepicker">
   <input type="text" class="input-small" name="start" />
   <span class="add-on">to</span>
   <input type="text" class="input-small" name="end" />
</div>

    
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <button type="submit" class="btn btn-primary"><i class="icon-plus"></i> Find</button>
  </div>
<% end %>
