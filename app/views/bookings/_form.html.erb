<!-- Form booking -->
<%= form_for @booking = Booking.new do |f| %>
  <div class="modal-body">
    <% if @booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
        <ul>
        <% @booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :departure_id, {placeholder: 'Departure Point'} %>
    </div>
    
    <div class="field">
      <%= f.text_field :destination_id, {placeholder: 'Destination Point'} %>
    </div>
    
    <div class="field">
      <%= f.text_field :teleporter_id, {placeholder: "Teleporter"} %>
    </div>

    <div class="field">
      <%= f.text_field :passenger_id, {placeholder: "Passenger"} %>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <button type="submit" class="btn btn-primary"><i class="icon-plus"></i> Find</button>
  </div>
<% end %>
