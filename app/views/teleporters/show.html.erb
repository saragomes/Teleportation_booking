<%- model_class = Teleporter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Identifiant:</strong></dt>
  <dd><%= @teleporter.id %>&nbsp</dd>
  <dt><strong>Nom:</strong></dt>
  <dd><%= @teleporter.name %>&nbsp</dd>
  <dt><strong>Departure Point:</strong></dt>
  <dd><%= @teleporter.departure.name %>&nbsp</dd>
  <dt><strong>Destination Point:</strong></dt>
  <dd><%= @teleporter.destination.name %>&nbsp</dd>
  <dt><strong>Departure:date</strong></dt>
  <dd><%=l @teleporter.departure_date %>&nbsp</dd>
  <dt><strong>Nr. de connexions:</strong></dt>
  <dt><strong>Cr√©e le:</strong></dt>
  <dd><%=l @teleporter.created_at %>&nbsp</dd>
</dl>

<h3>Teleporter passangers</h3>

<% if @teleporter.passengers.empty? %>
  No passenger. This teleporter is completely available!.
<% else %>
  <table class="table table-striped table-sorting">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">email</th>
        <th scope="col">Created at</th>
      </tr>
    </thead>
    <tbody>
      <% @teleporter.passengers.each do |passenger| %>
        <tr>
          <td><%= passenger.id %></td>
          <td><%= passenger.first_name %></td>
          <td><%= passenger.last_name %></td>
          <td><%= passenger.email %></td>
          <td><%=l passenger.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teleporters_path, {method: :get, :class => 'btn'}  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_backoffice_teleporter_path(@teleporter), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              teleporter_path(@teleporter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>